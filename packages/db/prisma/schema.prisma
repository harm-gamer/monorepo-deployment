

generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id              String      @id    @default(uuid())
  username        String
  password        String
  todo            Todo[]
}

model Todo{
  id             String      @id   @default(uuid())
  task           String
  done           Boolean     @default(false)
  UserId         String
  user           User        @relation(fields:[UserId],references : [id])
  
}

